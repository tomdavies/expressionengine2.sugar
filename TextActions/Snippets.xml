			<text-trigger>ifnor</text-trigger>
			<syntax-context>ee2, ee2 *</syntax-context>
		</snippet>
		
		<snippet id="com.macrabbit.TextActions.EE2.conditional.ifseg" category="actions.text.EE2/tools.Snippets.conditionals">
			<title>if segment_x == "value"</title>
			<text><![CDATA[{if segment_${1:x}=="${2:value}"}$3{/if}]]></text>
			<text-trigger>ifseg</text-trigger>
			<syntax-context>ee2, ee2 *</syntax-context>
		</snippet>
		
