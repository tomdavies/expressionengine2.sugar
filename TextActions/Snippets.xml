		<!-- Conditionals -->
		
		<snippet id="com.macrabbit.TextActions.EE2.conditional.if" category="actions.text.EE2/tools.Snippets.conditionals">
			<title>if</title>
			<text><![CDATA[{if ${2:variable}=="${3:value}"}$4{/if}]]></text>
			<text-trigger>if</text-trigger>
			<syntax-context>ee2, ee2 *</syntax-context>
		</snippet>
		
		<snippet id="com.macrabbit.TextActions.EE2.conditional.ifor" category="actions.text.EE2/tools.Snippets.conditionals">
			<title>if OR</title>
			<text><![CDATA[{if ${2:variable}=="${3:value}" OR ${4:variable}=="${5:value}" }$6{/if}]]></text>
			<text-trigger>ifor</text-trigger>
			<syntax-context>ee2, ee2 *</syntax-context>
		</snippet>
		
		<snippet id="com.macrabbit.TextActions.EE2.conditional.ifand" category="actions.text.EE2/tools.Snippets.conditionals">
			<title>if AND</title>
			<text><![CDATA[{if ${2:variable}=="${3:value}" AND ${4:variable}=="${5:value}" }$6{/if}]]></text>
			<text-trigger>ifand</text-trigger>
			<syntax-context>ee2, ee2 *</syntax-context>
		</snippet>
		
		<snippet id="com.macrabbit.TextActions.EE2.conditional.else" category="actions.text.EE2/tools.Snippets.conditionals">
			<title>if:else</title>
			<text><![CDATA[{if ${2:variable}=="${3:value}"}$4{if:else}$5{/if}]]></text>
			<text-trigger>ifelse</text-trigger>
			<syntax-context>ee2, ee2 *</syntax-context>
		</snippet>
		
		<snippet id="com.macrabbit.TextActions.EE2.conditional.elseif" category="actions.text.EE2/tools.Snippets.conditionals">
			<title>if:elseif</title>
			<text><![CDATA[{if ${2:variable}=="${3:value}"}$4{if:elseif ${5:variable}=="${6:value}"}$7{/if}]]></text>
			<text-trigger>ifelseif</text-trigger>
			<syntax-context>ee2, ee2 *</syntax-context>
		</snippet>
		
		<snippet id="com.macrabbit.TextActions.EE2.conditional.ifnor" category="actions.text.EE2/tools.Snippets.conditionals">
