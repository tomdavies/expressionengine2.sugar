<settings>
	
	<language id="com.expressionengine2">
		
		<!-- Should really be syntax-name -->
		<root-zone>language-root.html.with-ee2</root-zone>
		<name>ExpressionEngine 2</name>
		<detectors>
			<match-content lines="20"><![CDATA[(?i){exp]]></match-content>
			<match-content lines="20"><![CDATA[(?i){embed]]></match-content>
			<match-content lines="20"><![CDATA[(?i){preload_replace]]></match-content>
			<match-content lines="20"><![CDATA[(?i){!--]]></match-content>
		</detectors>
		<extension>html</extension>
	</language>
	
</settings>




